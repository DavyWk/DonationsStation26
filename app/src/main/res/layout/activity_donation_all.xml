<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/textSearchItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:inputType="textPersonName"
        android:onClick="onSearchButtonPressed"
    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewDonation"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:padding="4dp"
        android:scrollbars="vertical"/>
    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/back"
        android:onClick="onBackButtonPressed"
        android:text="Back" android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>

</LinearLayout>