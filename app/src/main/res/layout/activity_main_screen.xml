<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.MainActivity">


    <Button
        android:id="@+id/logoutButton"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/logout"
        android:onClick="onLogoutPressed" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logoutButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="23dp"
        android:text="Donation Tracker"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="92dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/log" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="99dp"
        android:text="Item Selection" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/adddonations"
        android:onClick="onLocationListPressed"
        android:text="Navegate Locations"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="195dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="121dp"
        android:background="@drawable/adddonations"
        android:onClick="onItemAllPressed"
        android:text="All Items"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button4"
        android:layout_width="199dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/adddonations"
        android:onClick="onItemLocationPressed"
        android:text="Location's Items"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="129dp"
        android:background="@drawable/clothing"
        android:onClick="onCategoryButtonPressed" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="129dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/hat"
        android:onClick="onCategoryButtonPressed" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="129dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/kitchen"
        android:onClick="onCategoryButtonPressed" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="226dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/others"
        android:onClick="onCategoryButtonPressed" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-92dp"
        android:layout_marginTop="225dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/elec"
        android:onClick="onCategoryButtonPressed" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="227dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/house"
        android:onClick="onCategoryButtonPressed" />


</RelativeLayout>
